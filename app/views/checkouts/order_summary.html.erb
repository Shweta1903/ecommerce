  <div class="row">
                <div class="col-xs-12 col-md-3 col-lg-3 pull-left">
                    <div class="panel panel-default height">
                        <div class="panel-heading"> Delivery Address </div>
                        <div class="panel-body">
						    <%= @address.first_name %> <br>
							<%= @address.last_name %> <br>
							<%= @address.address1 %> <br>
							<%= @address.contact_number %> <br>
							<%= @address.city %> 
                        </div>
                    </div>
                </div>
  </div>


<center><h1> Order Summary </h1></center>

<div class="row" style="margin-bottom: 20px">
		<strong>
			<div class="col-sm-3">
			  Preview Picture
			</div>
			<div class="col-sm-3">
			  Product Name
			</div>
			<div class="col-sm-4">
			  Quantity
			</div>
			<div class="col-sm-2">
			  Product Price
			</div>

		</strong>
</div>


<% @user_cart.carts.each do |cart| %>
   
	<div class="row">

		<div class="col-sm-3">
		  <%= image_tag cart.product.thumbnail, :class => "style_image" %>
		</div>

		<div class="col-sm-3">
		  <%= cart.product.name %>
		</div>

		<div class="col-sm-4">
		  <%= cart.quantity  %>
		</div>

	
		<div class="col-sm-2 prices">
		  <%= cart.product.discount_price * cart.quantity %>
		</div>
    </div>           
<% end %>


    <div class="order">
      Estimated Price: <span id="total_price"></span>
      <%= link_to "<Continue Shoping", root_path, class: 'btn btn-primary'%>
      <%= button_to "Payment", payment_path, params: {address_id: @address.id}, :class => "btn btn-sm btn-success", :method => :get  %>
    </div>

  
 <script type="text/javascript">
    
    $( document ).ready(function() {  
    	update_total_price();
    });

    function update_total_price() {
    	var total_price = 0;
    	$( ".prices" ).each(function() {
		  total_price = total_price + parseInt($( this ).text());
		});
    	$("#total_price").html(total_price);
    }
</script