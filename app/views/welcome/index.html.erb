<% if @sale.present? %>
  <center><h1><%= @sale.name %></h1></center>
  <div class="owl-carousel discount-products"
    >
    <% @sales_products.each do |product| %>
     <%= render partial: "shared/product_item", locals: {product: product}%>
  	<% end %>
	</div>
  <!-- <div class="row discount-products">
  
  </div> -->
<% end %>


<center> <h1> All Products </h1></center>

<%= render partial: "shared/product_list" %>


<script type="text/javascript">
	$('.owl-carousel').owlCarousel({
    loop:true,
    margin:60,
    nav:true,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:3
        },
        1000:{
            items:5
        }
    }
})
</script>
