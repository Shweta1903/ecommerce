<div class="container-fluid">
    <div class="content-wrapper">	
		<div class="item-container">	
			<div class="container">	
				<div class="col-md-12">
                    <div>
					   <%= image_tag @product.thumbnail, :class => "style_image" %>
		            </div>
                  <div class="col-md-7">
					<div class="product-title">  <%= @product.name %> </div>
					<div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
					<hr>
					  <% if @product.discount_price < @product.price %>
				        <div class="inline">  Rs. <%= @product.price %> </div>
				        <div class="product-price"> Rs. <%= @product.discount_price %></div>
				      <% else %>
				        <div class="product-price">  Rs. <%= @product.price %> </div>
				      <% end %>
					<div class="product-stock">In Stock</div>
					<hr>
					<div class="btn-group cart">
					     <% if @product.is_already_added(session[:user_cart_id]) %>
					     	<input type="button" class="btn btn-sm btn-success" value="Already added" />
					     <% else %>
							<%= link_to "Add To Cart", add_to_cart_path(product_id: @product.id), class: "btn btn-lg btn-success btn-sm link_#{@product.id}", method: 'get',remote:true %>
						 <% end %>
                    </div>

					<!-- <div class="btn-group wishlist">
						<button type="button" class="btn btn-danger">
							Add to wishlist 
						</button>
					</div> -->
				</div>
			</div> 
		</div>
		<div class="container-fluid">		
			<div class="col-md-12 product-info">
					<ul id="myTab" class="nav nav-tabs nav_tabs">
						
						<li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
						<li><a href="#service-two" data-toggle="tab">PRODUCT INFO</a></li>
						<li><a href="#service-three" data-toggle="tab">REVIEWS</a></li>
						
					</ul>
				<div id="myTabContent" class="tab-content">
						<div class="tab-pane fade in active" id="service-one">
						 
							<section class="container product-info">
							  <%= @product.description %>
							</section>
										  
						</div>
					<div class="tab-pane fade" id="service-two">
						
						<section class="container">
								
						</section>
						
					</div>
					<div class="tab-pane fade" id="service-three">
												
					</div>
				</div>
				<hr>
			</div>
		</div>
	</div>
</div>

